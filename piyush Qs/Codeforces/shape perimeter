#include <bits/stdc++.h>
using namespace std;
int main()
{
	int t;
    cin >> t;
	while(t--)
	{
		long long n , m;
		cin >> n >> m;
		long long a = m , b = m;
		for(int i = 0; i < n; i++)
		{
			long long  x , y;
			cin >> x >> y;
			if(i == 0) continue;
			a += x;
			b += y;
		}
		cout << 2*(a + b) << endl;
	}
	return 0;
}